{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'container-fluid'
  ]
%}

<div{{ attributes.addClass(classes, 'pb-5') }}>
    <div class="call-to-action w-100" style="background-color: {{ content.field_color[0]['#markup'] }};">
        <div class="text-center text-light">
            {% include '@components/molecules/body-text-with-heading.twig'
                with {
                    level: 2,
                    headline: content.field_heading,
                    heading_variant: 'views--header uppercase',
                    text: content.field_description
                }
            %}
        </div>
    </div>
</div>